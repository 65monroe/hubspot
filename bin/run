#!/usr/bin/env ruby
require './config'

rake = Rake.application
rake.init
rake.load_rakefile

rake['db:drop'].invoke
rake['db:create'].invoke
rake['db:migrate'].invoke
rake['db:seed'].invoke

Api::Companies.new.retreive
puts '== Companies Done =='
Api::Contacts.new.retreive
puts '== Contacts Done =='
Api::Deals.new.retreive
puts '== Deals Done =='
Api::Engagements.new.retreive
puts '== Engagements Done =='
Api::Owners.new.retreive
puts '== Owners Done =='

# create a new excel chart with our newly acquired data
Excel::Workbook.new
