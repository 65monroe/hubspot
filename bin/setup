#!/bin/sh

# Set up Ruby dependencies
echo "\n== Installing Bundler =="
gem install bundler

echo "\n== Installing Gems =="
bundle install


if [ ! -f .env ]; then
  echo "\n== Creating .env file ==" 
  cp .env.example .env
  echo "\n== Don't forget to edit your .env file ==" 
fi

if [ ! -f ./config/database.yml ]; then
  echo "\n== Creating database.yml file ==" 
  cp ./config/database.example.yml ./config/database.yml
  echo "\n== Don't forget to edit your config/database.yml file ==" 
fi

# Set up database
echo "\n== Setting up database =="
bundle exec rake db:create
bundle exec rake db:migrate